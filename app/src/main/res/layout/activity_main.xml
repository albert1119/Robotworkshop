<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/black"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/Messagebox"
        android:text="Bluetooth : Disconnect"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textColor="@drawable/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        />

    <Button
        android:id="@+id/Move_Forward"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Move_Left"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="1dp"
        android:background="@drawable/move_forward_btn"/>

    <Button
        android:id="@+id/Move_Backward"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/Move_Left"
        android:layout_toRightOf="@+id/Move_Left"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"
        android:background="@drawable/move_backward_btn"/>

    <Button
        android:id="@+id/Move_Left"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/Move_Forward"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/move_left_btn"/>

    <Button
        android:id="@+id/Move_Right"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/Move_Forward"
        android:layout_toRightOf="@+id/Move_Forward"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"
        android:background="@drawable/move_right_btn"/>

    <Button
        android:id="@+id/Start_DCMotor"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/Move_Left"
        android:layout_marginRight="1dp"
        android:background="@drawable/start_dcmotor_btn"/>

    <Button
        android:id="@+id/Start_Clockwise"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toLeftOf="@+id/Start_DCMotor"
        android:layout_alignTop="@id/Move_Forward"
        android:layout_marginRight="50dp"
        android:background="@drawable/start_clockwise_btn"/>

    <Button
        android:id="@+id/Start_Counterclockwise"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toLeftOf="@+id/Start_DCMotor"
        android:layout_alignTop="@id/Move_Backward"
        android:layout_marginRight="50dp"
        android:background="@drawable/start_counterclockwise_btn"/>

</RelativeLayout>
